<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.ubuntix.android.birthdayreminder"
    android:versionCode="8"
    android:versionName="0.4.1" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="24" />

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:icon="@drawable/balloons2"
        android:label="@string/app_name" >
        <activity
            android:name="de.ubuntix.android.birthdayreminder.BirthdayReminder"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.ubuntix.android.birthdayreminder.BirthdayEditor"
            android:label="@string/app_name" />
        <activity
            android:name="de.ubuntix.android.birthdayreminder.PreferenceWindow"
            android:label="@string/preferences_name" />
        <activity
            android:name="de.ubuntix.android.birthdayreminder.AddContact"
            android:label="@string/preferences_name" />
        <activity
            android:name="de.ubuntix.android.birthdayreminder.DeleteContacts"
            android:label="@string/preferences_name" />
        <activity
            android:name="de.ubuntix.android.birthdayreminder.MainActivity"
            android:label="@string/preferences_name" />

        <receiver android:name="de.ubuntix.android.birthdayreminder.service.BirthdayBroadcastReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>